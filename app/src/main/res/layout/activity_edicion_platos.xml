<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".camarero.EdicionPlatos">

    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="640dp"
        android:background="@drawable/custom_relative"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/popUp_nombre_comida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la comida"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/popUp_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:textAlignment="center"
            android:textColor="#434242"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/popUp_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:textAlignment="center"
            android:textColor="#424040"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cb_verdura"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:text="Verduras"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cb_aceitunas"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Aceitunas"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cb_harina"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:text="Harina"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cb_lacteos"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="Lacteos"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cb_carne"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:text="Carne"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/cb_pescado"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="Pescado"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cb_marisco"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="Marisco"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <CheckBox
                android:id="@+id/cb_arroz"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="Arroz"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cb_pasta"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="Pasta"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <CheckBox
                android:id="@+id/cb_azucar"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="AzÃºcar"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cb_chocolate"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="Chocolate"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <CheckBox
                android:id="@+id/cb_huevo"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="Huevos"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cb_frutos"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="Frutos secos"
                android:textSize="16sp" />
        </TableRow>

        <TextView
            android:id="@+id/popUp_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio: ?  "
            android:textAlignment="textEnd"
            android:textAllCaps="false"
            android:textColor="#308322"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/black"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_acept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Aceptar" />

            <Button
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>